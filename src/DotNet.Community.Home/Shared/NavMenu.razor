<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">.NET Community</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link unselectable" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link unselectable" href="checklist">
                <span class="oi oi-check" aria-hidden="true"></span> Streaming Checklist
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link unselectable" href="codeofconduct">
                <span class="oi oi-document" aria-hidden="true"></span> Code of Conduct
            </NavLink>
        </div>
    </nav>
</div>

@code {
    bool _collapseNavMenu = true;
    string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;
    void ToggleNavMenu() => _collapseNavMenu = !_collapseNavMenu;
}
